<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoapTripPlannerApp.View.HomePage"
             xmlns:viewmodel="clr-namespace:RoapTripPlannerApp.ViewModel"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             Title="Road Trip Planner"
             Shell.TitleColor="Transparent">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="Profile"
            IconImageSource="use.jpg"
            Command="{Binding ProfileCommand}"/>
        <ToolbarItem 
            Text="My Trips" 
            IconImageSource="trips.pjg"
            Command="{Binding TripsCommand}"/>
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="500, *">
        <!--<maps:Map IsShowingUser="True" IsTrafficEnabled="True" MapType="Street"></maps:Map>-->
        <Button Grid.Row="0"
        Text="My Trips"
        FontSize="20"
        HeightRequest="75"
        Command="{Binding MyTripsCommand}"/>
        <Button Grid.Row="1"
                Text="Create New Trip"
                FontSize="20"
                HeightRequest="75"
                Command="{Binding NewTripCommand}"/>
    </Grid>

</ContentPage>