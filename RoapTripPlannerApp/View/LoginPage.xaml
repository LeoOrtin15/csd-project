<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="RoapTripPlannerApp.View.LoginPage"
             x:Name="Page"
             xmlns:viewmodel="clr-namespace:RoapTripPlannerApp.ViewModel"
             Title="LoginPage"
             Shell.NavBarIsVisible="False">
    <!--<ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior 
            EventName="Appearing" 
            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:LoginViewModel}}, Path=OnAppearingCommand}"/>
    </ContentPage.Behaviors>-->
    <Grid RowDefinitions="20, Auto, Auto, Auto" 
          RowSpacing="20">
        <StackLayout Grid.Row="1"
                     Orientation="Vertical" 
                     VerticalOptions="CenterAndExpand">
            <Frame Style="{StaticResource entryFrameStyle}" >
                <StackLayout Orientation="Horizontal">
                    <Frame Style="{StaticResource iconFrameStyle}" >
                        <Image Source="user.png"
                               Margin="5"/>
                    </Frame>
                    <Entry Text="{Binding Username}"  
                           Placeholder="Username" />
                </StackLayout>
            </Frame>
            <Frame Style="{StaticResource entryFrameStyle}" >
                <StackLayout Orientation="Horizontal">
                    <Frame Style="{StaticResource iconFrameStyle}">
                        <Image Source="lock.png"
                               Margin="5"/>
                    </Frame>
                    <Entry Text="{Binding Password}"  
                           Placeholder="Password" />
                </StackLayout>
            </Frame>
        </StackLayout>
        <Button Text="LOG IN" 
                Grid.Row="2"
                Command="{Binding LoginCommand}"/>
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="CenterAndExpand" 
                     Margin="0,20,0,0" 
                     Padding="0"
                     Spacing="10"
                     Grid.Row="3">
            <Label Text="New User?" 
                   TextColor="DarkGray" 
                   FontSize="Small"/>
            <Label Text="Register" 
                   TextColor="DarkOliveGreen" 
                   FontAttributes="Bold" 
                   FontSize="Small">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding RegisterCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </Grid>
</ContentPage>